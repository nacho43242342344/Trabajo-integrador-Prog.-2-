<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> 
				<form action="http://localhost:3000/users/profileValidation" method="POST" novalidate>
					<div class="logInForm">
						<label for="email">Correo electrónico:</label><br>
						<input class="formCompletar" type="email" id="email" name="email" value="<%= locals.old && old.email ? old.email : "" %>"><br>
						<% if (locals.errors && errors.email) {%>
							<p class="error"><%= errors.email.msg %></p>
						<% } %>
					</div>
					<div class="logInForm">
						<label for="password">Contraseña:</label><br>
						<input class="formCompletar" type="password" id="password" name="password" value="<%= locals.old !== undefined && old.password ? old.password : ""  %>"><br>
						<% if (locals.errors && errors.password) {%>
							<p class="error"><%= errors.password.msg %></p>
						<% } %>
					</div>
					<div class="logInForm">
						<input type="checkbox" id="remember" name="remember" value="ok">
						<label class="formCompletar" for="remember">Recordarme</label><br>
					</div>
					<div>
						<button class="botonForm" type="submit">Iniciar sesión</button>
					</div>
				</form>
			</h2>
		</div>

	</div>
	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>