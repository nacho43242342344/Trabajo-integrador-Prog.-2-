<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> 
				<form action="http://localhost:3000/users/profile" method="get">
					<div class="logInForm">
						<label for="email">Usuario (correo electrónico):</label><br>
						<input class="formCompletar" type="email" id="email" name="email" required><br>
					</div>
					<div class="logInForm">
						<label for="password">Contraseña:</label><br>
						<input class="formCompletar" type="password" id="password" name="password" required><br>
					</div>
					<div class="logInForm">
						<input type="checkbox" id="remember" name="remember">
						<label class="formCompletar" for="remember">Recordarme</label><br>
					</div>
					<div>
						<button class="botonForm" type="submit">Iniciar sesión</button>
					</div>
				</form>
			</h2>
		</div>

	</div>
	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>